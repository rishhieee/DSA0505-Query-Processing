import matplotlib.pyplot as plt

# Sample data
languages = ['Java', 'Python', 'PHP', 'JavaScript', 'C#', 'C++']
popularity = [22.2, 17.6, 8.8, 8, 7.7, 6.7]

# Create horizontal bar chart
plt.figure(figsize=(10,6))
plt.barh(languages, popularity, color='lightgreen', edgecolor='black')  # Fixed: plt.barh not plt.barn

# Labels and title
plt.xlabel('Popularity (%)')  # Fixed: Removed extra parenthesis
plt.ylabel('Programming Languages')
plt.title('Popularity of Programming Languages (Horizontal Bar Chart)')  # Fixed: Added missing quote

# Invert y-axis to have highest popularity on top
plt.gca().invert_yaxis()

# Display the chart
plt.show()
